<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:background="#3c3c3c"
                tools:ignore="ContentDescription">

  <ImageView
    android:id="@+id/widget_image"
    android:layout_width="@dimen/notification_expanded_height"
    android:layout_height="@dimen/notification_expanded_height"
    android:layout_alignParentBottom="false"
    android:layout_alignParentLeft="true"
    android:scaleType="fitXY"
      android:layout_margin="5dp" />

  <LinearLayout
    android:id="@+id/notification_expanded_buttons"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_alignParentRight="true"
    android:layout_toRightOf="@+id/widget_image"
      android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/notification_expanded_prev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?android:selectableItemBackground"
        android:src="@drawable/ic_prev"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/notification_expanded_play"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="?android:selectableItemBackground"
        android:src="@drawable/ic_play"
        android:scaleType="centerCrop"
        android:padding="5dp"/>

    <ImageView
        android:id="@+id/notification_expanded_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?android:selectableItemBackground"
        android:src="@drawable/ic_next"
        android:scaleType="matrix" />

  </LinearLayout>

  <ImageButton
    android:id="@+id/notification_collapse"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_alignParentTop="true"
    android:background="?android:selectableItemBackground"
    android:padding="@dimen/notification_expanded_collapse_padding"
    android:src="@drawable/btn_notification_collapse"/>

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="station"
      android:id="@+id/notification_station_name"
      style="@style/NotificationText"
      android:textAppearance="@android:style/TextAppearance.StatusBar.EventContent.Title"
      android:textColor="@color/colorTextAccent"
      android:layout_toRightOf="@+id/widget_image"
      android:layout_alignParentTop="true"/>

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/notification_artist"
      style="@style/NotificationText"
      android:textColor="@color/colorText"
      android:layout_toRightOf="@+id/widget_image"
      android:layout_below="@+id/notification_station_name"
      android:layout_marginRight="15dp"
      android:layout_toLeftOf="@+id/notification_station_name"/>

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/notification_song"
      style="@style/NotificationText"
      android:textColor="@color/colorText"
      android:layout_toRightOf="@+id/notification_artist"
      android:layout_below="@+id/notification_station_name"
      android:textStyle="italic"
      android:layout_toLeftOf="@+id/notification_collapse"/>

</RelativeLayout>
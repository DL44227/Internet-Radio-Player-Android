<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                tools:context="com.android.murano500k.newradio.ActivityRadio">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:id="@+id/appBarLayout">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay"/>

    </android.support.design.widget.AppBarLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/loading_layout"
        android:elevation="50dp"
        android:background="@color/colorPrimary"
        android:visibility="gone">
        <com.wang.avi.AVLoadingIndicatorView
            android:id="@+id/loading"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:padding="10dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:visibility="visible"
            app:indicator="BallRotate"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>


    <FrameLayout
        android:id="@+id/controlLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:background="@color/colorPrimary"
        android:filterTouchesWhenObscured="false"
        android:fadeScrollbars="false"
        android:alpha="0.8">


        <ImageButton
            android:id="@+id/buttonControlStart"
            android:src="@drawable/playpause_selector"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:padding="10dp"
            android:elevation="20dp"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_margin="10dp"
            android:background="@color/colorSecondary"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp" />
        <com.wang.avi.AVLoadingIndicatorView
            android:id="@+id/spinner"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:padding="10dp"
            android:elevation="20dp"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_margin="10dp"
            android:background="@color/colorSecondary"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:visibility="gone"
            app:indicator="Pacman"
            />

        <ImageButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/btnPrev"
            android:src="@drawable/ic_prev"
            android:layout_marginRight="20dp"
            android:layout_gravity="bottom|left"
            android:elevation="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="30dp"
            android:background="@color/colorSecondary" />

        <ImageButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/btnNext"
            android:src="@drawable/ic_next"
            android:layout_gravity="bottom|right"
            android:cropToPadding="false"
            android:elevation="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="65dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:background="@color/colorSecondary" />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/btnShuffle"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/shuffle_selector"
            android:background="@color/colorSecondary"
            android:clickable="true"
            android:cropToPadding="false"
            android:focusable="true"
            android:layout_gravity="right|center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="30dp" />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/btnSleep"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_sleep"
            android:background="@color/colorSecondary"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:elevation="10dp"
            android:visibility="visible"
            android:layout_marginRight="20dp" />

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sleepTimerLayout"
            android:clickable="true"
            android:focusable="true"
            android:layoutMode="clipBounds"
            android:visibility="visible"
            android:layout_margin="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="n"
                android:id="@+id/sleepMinutes"
                android:textStyle="bold"
                android:theme="@style/AppTheme"
                android:textColor="@color/colorTextAccent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:textIsSelectable="false"
                android:textSize="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="minutes left to sleep"
                android:id="@+id/textView"
                android:layout_toRightOf="@+id/sleepMinutes"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp" />

        </RelativeLayout>

    </FrameLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutManager="LinearLayoutManager"
        tools:listitem="@layout/list_item"
        tools:context="com.android.murano500k.onlineradioplayer.MainActivity"
        android:fadingEdge="vertical|horizontal"
        android:fadingEdgeLength="30dp"
        android:requiresFadingEdge="vertical"
        android:alpha="0.8"
        android:layout_above="@+id/controlLayout"
        android:visibility="visible"
        android:layout_below="@+id/appBarLayout"/>


</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:id="@+id/content_main"
                    tools:context="com.stc.radio.player.ui.ActivityRxTest"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
    <!-- android:fitsSystemWindows="true"
app:layout_behavior="@string/appbar_scrolling_view_behavior"-->


    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"/>


    <TextView
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:id="@+id/textViewProgress"
        android:layout_alignParentEnd="true"
        android:text="111 / 800 isPlaying"
        android:layout_margin="8dp"
        android:textColor="@color/colorTextAccent"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layoutManager="LinearLayoutManager"
        tools:listitem="@layout/list_item"
        tools:context="com.android.murano500k.newradio.ui.ActivityRxTest"
        android:fadingEdge="vertical|horizontal"
        android:fadingEdgeLength="30dp"
        android:visibility="visible"
        android:layout_below="@+id/progressBar"
        android:layout_above="@+id/fragment_playback_controls"

        android:fitsSystemWindows="true"/>

    <fragment android:name="com.stc.radio.player.PlaybackControlsFragment"
              android:id="@+id/fragment_playback_controls"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_alignParentBottom="true"
              tools:layout="@layout/fragment_playback_controls" />
</RelativeLayout>